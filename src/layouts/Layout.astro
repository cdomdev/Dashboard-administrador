---
interface Props {
  title: string;
}
import { Sidebar } from "@/components/Sidebar.jsx";
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
const cookies = Astro.cookies;
const authToken = cookies.get("access_token");
const isAuthenticated = authToken !== undefined;
if (isAuthenticated) {
  Astro.redirect("/auth");
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="/favicon.webp" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <Sidebar client:only="react" isAuthenticated={isAuthenticated} />
  <section>
    <slot />
  </section>
</html>
<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"
></script>

<script is:inline src="https://upload-widget.cloudinary.com/global/all.js"
></script>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    scrollbar-width: none;
    overflow-y: none;
    font-family: "Montserrat Variable", sans-serif !important;
  }

  /* La barra de desplazamiento completa */
  ::-webkit-scrollbar {
    width: 10px;
  }

  /* El "track" de la barra de desplazamiento */
  ::-webkit-scrollbar-track {
    background: #ececec;
    border-radius: 10px;
  }

  /* El pulgar (thumb) de la barra de desplazamiento */
  ::-webkit-scrollbar-thumb {
    background: #ececec;
    border-radius: 10px;
    height: 20px;
  }

  /* El pulgar (thumb) cuando est√© en hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>
