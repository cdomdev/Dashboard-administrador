---
interface Props {
  title: string;
}
import Header from "../components/Header.astro";
import Aside from "../components/Aside.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <Aside />
    <section class="p-2 sm:ml-64 mt-12 bg-[#f5f6fa] min-h-screen">
      <div class="dark:border-gray-700 mt-1">
        <slot />
      </div>
    </section>
  </body>
  <script
    is:inline
    src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"
  ></script>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    scrollbar-width: none;
    overflow-y: none;
    font-family: "Onest Variable", sans-serif;
  }

  /* La barra de desplazamiento completa */
  ::-webkit-scrollbar {
    width: 10px;
  }

  /* El "track" de la barra de desplazamiento */
  ::-webkit-scrollbar-track {
    background: #ececec;
    border-radius: 10px;
  }

  /* El pulgar (thumb) de la barra de desplazamiento */
  ::-webkit-scrollbar-thumb {
    background: #ececec;
    border-radius: 10px;
    height: 20px;
  }

  /* El pulgar (thumb) cuando est√© en hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>
